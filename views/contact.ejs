<div class="container mt-3">
		<div class="row">
			<div class="col-md-8">
				<h2>Daftar Contact</h2>
        <a href="/contact/add" class="btn btn-primary">Tambah Mahasiswa</a>
        <% if (typeof successMessage !== 'undefined') { %>
<div class="alert alert-success">
    <%= successMessage %>
</div>
<% } %>
         <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">No HP</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
  <% if(contacts.length === 0){ %>
  	<tr>
  		<td colspan="4">
  		<div class="alert alert-secondary" role="alert">
  isi masih kosong silahkan tambahkan ke database.
</div>
  		</td>
  	</tr>
 <% }else{ %>
  <% let i = 1; %>
  <% contacts.forEach(contact => { %>
    <tr>
      <th scope="row"><%= i++ %></th>
      <td><%=contact.nama %></td>
      <td><%=contact.nohp %></td>
      <td>
      <a href="/contact/<%=contact.nama %>" class="badge rounded-pill btn btn-success"><i class="bi bi-info-circle-fill"></i> detail</a>
      </td>
    </tr>
    <% }) %>
   <% } %>
  </tbody>
</table>
        </div>
      </div>
    </div>